generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Study {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  code     String
  nickname String
  queries  Int
  sponsor  String
  status   String
  subjects Int
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  studies String[]
}
