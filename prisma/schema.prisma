generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Case {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  folders String[]
  study   String   @db.ObjectId
  subject String   @db.ObjectId
}

model Folder {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  case    String @db.ObjectId
  name    String
  study   String @db.ObjectId
  subject String @db.ObjectId
}

model Study {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  nickname String
  protocol String
  queries  Int
  sponsor  String
  status   String
  subjects String[]
}

model Subject {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  number String
  status String
  study  String @db.ObjectId
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  studies String[]
}
